{
  "name": "telegraf",
  "version": "4.10.0",
  "description": "Modern Telegram Bot Framework",
  "license": "MIT",
  "author": "Vitaly Domnikov <oss@vitaly.codes>",
  "homepage": "https://telegraf.js.org",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/telegraf/telegraf.git"
  },
  "bugs": {
    "url": "https://github.com/telegraf/telegraf/issues"
  },
  "main": "lib/index.js",
  "exports": {
    ".": {
      "types": "./typings/index.d.ts",
      "require": "./lib/index.js",
      "import": "./lib/index.js"
    },
    "./types": {
      "types": "./typings/telegram-types.d.ts",
      "default": "./lib/telegram-types.js"
    },
    "./transformers": {
      "types": "./typings/transformers/index.d.ts",
      "default": "./lib/transformers/index.js"
    },
    "./format": {
      "types": "./typings/format.d.ts",
      "require": "./lib/format.js",
      "import": "./lib/format.js"
    }
  },
  "files": [
    "src/**/*.ts",
    "lib/**/*.js",
    "typings/**/*.d.ts",
    "typings/**/*.d.ts.map"
  ],
  "bin": {
    "telegraf": "lib/cli.mjs"
  },
  "scripts": {
    "prepare": "npm run --silent build",
    "build": "tsc",
    "build:docs": "typedoc src/index.ts",
    "pretest": "npm run build",
    "test": "ava test/*",
    "lint": "eslint .",
    "checks": "npm test && npm run lint",
    "refresh": "npm run clean && npm ci",
    "clean": "git clean -fX .eslintcache docs/build/ lib/ typings/"
  },
  "type": "commonjs",
  "engines": {
    "node": ">=18"
  },
  "types": "./typings/index.d.ts",
  "dependencies": {
    "debug": "^4.3.3",
    "mri": "^1.2.0",
    "p-timeout": "^4.1.0",
    "safe-compare": "^1.1.4",
    "typegram": "^3.11.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/node": "^18.7.23",
    "@types/safe-compare": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "ava": "^4.0.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-ava": "^13.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^2.5.1",
    "typedoc": "^0.23.15",
    "typescript": "^4.8.4"
  },
  "keywords": [
    "telegraf",
    "telegram",
    "telegram bot api",
    "bot",
    "botapi",
    "bot framework"
  ]
}
